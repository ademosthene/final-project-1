  <body>
    <%include ./partials/profileHeader%>

    <section class ="profile-information">
      <section class="profile-picture">
        <section class="pro-image">
          <img id="profileImg" src="<%= user.img %>" alt="">
        </section>
        <section class="upload-picture">
          <form action="/up" enctype="multipart/form-data" method="post">
            <input class="choose-file" type="file" name="file-to-upload">
            <input class="upload" type="submit" value="Upload">
          </form>
        </section>
        <section class="bio-info">
          <form action="/profile" method="POST">
            <input class="bio-info-input" type="text" name="name" value="<%= user.name %>" placeholder="Name">
            <input class="bio-info-input" type="text" name="location" value="<%= user.location %>" placeholder="Location">
            <section class="bio-section">
                <input class="bio-info-input2" placeholder="Bio" "type="text" name="bio" value="<%= user.bio %>">
                <input class="btn" id="bio-btn" type="submit" name="" value="SUBMIT">
            </section>
          </form>
        </section>
      </section>
      <section class="profile-username">
        <section class="shop-and-upload">
          <h1><a class="upload-art-btn" href="/productUpload">Upload Your Art</a></h1>
        </section>
        <section class="shop-and-upload2">
          <h1><a class="upload-art-btn" href="/artist?id=<%= user._id %>">View Profile</a></h1>
        </section>
      </section>
      </section>

